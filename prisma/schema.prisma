generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String
  password  String
  yardsales YardSale[]
}

model YardSale {
  id        Int      @id @default(autoincrement())
  title     String
  address   String
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
